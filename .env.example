# ================================
# CONFIGURACIÓN DEL BACKEND
# ================================

# Entorno de ejecución
NODE_ENV=development

# Puerto del servidor
PORT=3000

# ================================
# BASE DE DATOS - PostgreSQL
# ================================
DATABASE_URL="postgresql://user:password@localhost:5432/crazy_shop?schema=public"

# ================================
# AUTENTICACIÓN - JWT
# ================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# ================================
# BETTER AUTH
# ================================
BETTER_AUTH_SECRET=your-better-auth-secret-key-change-this
BETTER_AUTH_URL=http://localhost:3000

# ================================
# EMAIL - Resend
# ================================
RESEND_API_KEY=re_your_resend_api_key_here

# ================================
# CORS
# ================================
FRONTEND_URL=http://localhost:4321
ALLOWED_ORIGINS=http://localhost:4321,http://localhost:3000

# ================================
# ADMIN CREDENTIALS (Primera ejecución)
# ================================
ADMIN_EMAIL=admin@crazyshop.com
ADMIN_PASSWORD=Admin123!
ADMIN_NAME=Super Admin
