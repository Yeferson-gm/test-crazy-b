{
	"name": "crazy-shop-backend",
	"version": "1.0.0",
	"description": "Backend POS multi-tienda con facturación electrónica SUNAT",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"imports": {
		"#*": "./src/*.ts",
		"#prisma/*": "./prisma/*.prisma",
		"#modules/*": "./src/modules/*.ts",
		"#shared/*": "./src/shared/*.ts"
	},
	"scripts": {
		"dev": "bun --watch index.ts",
		"start": "bun index.ts",
		"db:push": "prisma db push",
		"db:seed": "prisma db seed",
		"db:studio": "prisma studio",
		"db:generate": "prisma generate",
		"db:migrate:dev": "prisma migrate dev",
		"db:migrate:deploy": "prisma migrate deploy",
		"format": "bunx biome format --write",
		"check": "bunx biome check --write",
		"lint": "bunx biome lint --write"
	},
	"prisma": {
		"seed": "bun run src/database/seeds/seed.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.6",
		"@types/bcrypt": "^6.0.0",
		"@types/bun": "latest",
		"@types/pg": "^8.15.6",
		"@types/supertest": "^6.0.3",
		"supertest": "^7.1.4",
		"vite": "^7.1.12",
		"vitest": "4.0.5",
		"@vitest/ui": "4.0.5"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@elysiajs/cookie": "^0.8.0",
		"@elysiajs/cors": "^1.4.0",
		"@elysiajs/jwt": "^1.4.0",
		"@elysiajs/swagger": "^1.3.1",
		"@prisma/adapter-pg": "^7.0.0",
		"@prisma/client": "^7.0.0",
		"bcrypt": "^6.0.0",
		"better-auth": "^1.4.0",
		"dayjs": "^1.11.19",
		"elysia": "^1.4.16",
		"pg": "^8.16.3",
		"prisma": "^7.0.0",
		"resend": "^6.5.2",
		"zod": "^4.1.12"
	}
}
